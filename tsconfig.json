{
  "compilerOptions": {
    "target": "esnext", // Modern JS target
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Use Node resolution instead of bundler
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "prisma/index.ts", // Including Prisma index.ts
    "lib/prisma/**/*.ts", // Adjusted for better coverage
    "pages/api/**/*.ts",
    "app/api/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
